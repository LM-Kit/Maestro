    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject] private ModelListViewModel ModelListViewModel { get; set; } = null!;

    [Inject] private ILauncher Launcher { get; set; } = null!;

    private string _searchQuery = string.Empty;
    private string SearchQuery
    {
        get => _searchQuery;
        set { _searchQuery = value; InvokeAsync(StateHasChanged); }
    }

    // Filters
    private bool FilterReasoning { get; set; }
    private bool FilterVision { get; set; }
    private bool FilterCode { get; set; }
    private bool FilterMath { get; set; }
    private bool FilterTools { get; set; }
    private bool HideLegacy { get; set; } = true; // Hide legacy models by default

    private bool HasActiveFilters => FilterReasoning || FilterVision || FilterCode || FilterMath || FilterTools;

    private void ClearFilters()
    {
        FilterReasoning = FilterVision = FilterCode = FilterMath = FilterTools = false;
        HideLegacy = true; // Reset to default (hidden)
        InvokeAsync(StateHasChanged);
    }

    // Sorting
    private string SortColumn { get; set; } = "perf";
    private bool SortAscending { get; set; } = false; // Default: highest perf first

    private void SetSort(string column)
    {
        if (SortColumn == column) SortAscending = !SortAscending;
        else { SortColumn = column; SortAscending = column == "name"; } // Descending by default for numbers
        InvokeAsync(StateHasChanged);
    }

    private IEnumerable<ModelCardViewModel> FilteredModels
    {
        get
        {
            var models = ModelListViewModel.Models.AsEnumerable();

            // Hide legacy models filter (on by default)
            if (HideLegacy) models = models.Where(m => !m.IsLegacyModel);

            // Text search
            if (!string.IsNullOrWhiteSpace(SearchQuery))
            {
                models = models.Where(m =>
                    m.ModelInfo.ModelName.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase) ||
                    m.ModelInfo.Publisher.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase));
            }

            // Capability filters (AND logic - must have ALL selected capabilities)
            if (FilterReasoning) models = models.Where(m => m.HasReasoningCapability);
            if (FilterVision) models = models.Where(m => m.HasVisionCapability);
            if (FilterCode) models = models.Where(m => m.IsCodeModel);
            if (FilterMath) models = models.Where(m => m.IsMathModel);
            if (FilterTools) models = models.Where(m => m.HasToolsCallCapability);

            return models;
        }
    }

    private IEnumerable<ModelCardViewModel> SortedFilteredModels => SortColumn switch
    {
        "perf" => SortAscending ? FilteredModels.OrderBy(m => m.CompatibilityLevel) : FilteredModels.OrderByDescending(m => m.CompatibilityLevel),
        "name" => SortAscending ? FilteredModels.OrderBy(m => m.ModelInfo.ModelName) : FilteredModels.OrderByDescending(m => m.ModelInfo.ModelName),
        "params" => SortAscending ? FilteredModels.OrderBy(m => m.ModelInfo.ParameterCount) : FilteredModels.OrderByDescending(m => m.ModelInfo.ParameterCount),
        "context" => SortAscending ? FilteredModels.OrderBy(m => m.ModelInfo.ContextLength) : FilteredModels.OrderByDescending(m => m.ModelInfo.ContextLength),
        "size" => SortAscending ? FilteredModels.OrderBy(m => m.ModelInfo.FileSize) : FilteredModels.OrderByDescending(m => m.ModelInfo.FileSize),
        "status" => SortAscending ? FilteredModels.OrderBy(m => m.IsLocallyAvailable) : FilteredModels.OrderByDescending(m => m.IsLocallyAvailable),
        _ => FilteredModels
    };

    private void SelectModel(ModelCardViewModel model) => MudDialog.Close(model);

    private string GetPerformanceClass(float level) => level >= 0.7f ? "perf-high" : level >= 0.4f ? "perf-medium" : "perf-low";

    private string GetMemoryClass(long size) => size < 3_000_000_000 ? "perf-high" : size < 8_000_000_000 ? "perf-medium" : "perf-low";
    
    private int GetMemoryScore(long size) => size < 2_000_000_000 ? 95 : size < 5_000_000_000 ? 70 : size < 10_000_000_000 ? 45 : 25;

    private string FormatSize(long bytes) => bytes >= 1_000_000_000 ? $"{bytes / 1_000_000_000.0:F2} GB" : bytes >= 1_000_000 ? $"{bytes / 1_000_000.0:F0} MB" : $"{bytes / 1_000.0:F0} KB";

    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string ActionText { get; set; } = string.Empty;
    [Parameter] public Color ActionColor { get; set; }
    [Parameter] public bool IsImportant { get; set; }

    private async Task OpenModelFolder(ModelCardViewModel model)
    {
        if (model.IsLocallyAvailable && !string.IsNullOrEmpty(model.ModelInfo.LocalPath))
        {
            try
            {
                var folderPath = Path.GetDirectoryName(model.ModelInfo.LocalPath);
                if (!string.IsNullOrEmpty(folderPath) && Directory.Exists(folderPath))
                {
                    await Launcher.OpenAsync(new Uri($"file://{folderPath}"));
                }
            }
            catch (Exception ex)
            {
                System.Diagnostics.Debug.WriteLine($"Failed to open folder: {ex.Message}");
            }
        }
    }
