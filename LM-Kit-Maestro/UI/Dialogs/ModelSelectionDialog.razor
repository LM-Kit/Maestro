<MudDialog Class="model-selection-dialog-root">
    <DialogContent>
        <div class="model-selection-dialog-content-wrapper">
            <div @onclick="() => MudDialog.Cancel()" class="dialog-backdrop"></div>
            <div class="model-selection-dialog-content-root">
                <div class="dialog-header">
                    <div class="header-content">
                        <div class="header-title-row">
                            <MudText Typo="Typo.h5" Class="header-text">
                                Models
                            </MudText>
                            <span class="model-count-badge">@SortedFilteredModels.Count()</span>
                        </div>
                        <MudText Typo="Typo.body2" Class="header-subtitle">
                            Select a model to power your conversation
                        </MudText>
                    </div>

                    <button class="close-button" @onclick="() => MudDialog.Cancel()">
                        <span class="fas fa-xmark"></span>
                    </button>
                </div>

                <div class="search-filter-container">
                    <div class="search-container">
                        <span class="fas fa-search search-icon"></span>
                        <input type="text" 
                               class="search-input" 
                               placeholder="Search models..." 
                               @bind="SearchQuery" 
                               @bind:event="oninput" />
                        @if (!string.IsNullOrEmpty(SearchQuery))
                        {
                            <button class="search-clear" @onclick="() => SearchQuery = string.Empty">
                                <span class="fas fa-xmark"></span>
                            </button>
                        }
                    </div>

                    <!-- Filter Chips -->
                    <div class="filter-chips">
                        <button class="filter-chip @(FilterReasoning ? "active" : "")" @onclick="() => FilterReasoning = !FilterReasoning">
                            <MudIcon Icon="@Icons.Material.Outlined.Psychology" Size="Size.Small" />
                            <span>Reasoning</span>
                        </button>
                        <button class="filter-chip @(FilterVision ? "active" : "")" @onclick="() => FilterVision = !FilterVision">
                            <MudIcon Icon="@Icons.Material.Outlined.Visibility" Size="Size.Small" />
                            <span>Vision</span>
                        </button>
                        <button class="filter-chip @(FilterCode ? "active" : "")" @onclick="() => FilterCode = !FilterCode">
                            <MudIcon Icon="@Icons.Material.Outlined.Code" Size="Size.Small" />
                            <span>Code</span>
                        </button>
                        <button class="filter-chip @(FilterMath ? "active" : "")" @onclick="() => FilterMath = !FilterMath">
                            <MudIcon Icon="@Icons.Material.Outlined.Calculate" Size="Size.Small" />
                            <span>Math</span>
                        </button>
                        <button class="filter-chip @(FilterTools ? "active" : "")" @onclick="() => FilterTools = !FilterTools">
                            <MudIcon Icon="@Icons.Material.Outlined.Build" Size="Size.Small" />
                            <span>Tools</span>
                        </button>
                        
                        <span class="filter-divider"></span>
                        
                        <button class="filter-chip filter-chip-toggle @(HideLegacy ? "active" : "")" @onclick="() => HideLegacy = !HideLegacy" title="Hide older models that have newer replacements available">
                            <MudIcon Icon="@Icons.Material.Outlined.History" Size="Size.Small" />
                            <span>Hide Outdated</span>
                        </button>
                        
                        @if (HasActiveFilters)
                        {
                            <button class="filter-clear" @onclick="ClearFilters">
                                <span class="fas fa-xmark"></span>
                                <span>Clear</span>
                            </button>
                        }
                    </div>
                </div>

                <!-- Column Headers with Sorting -->
                <div class="column-headers">
                    <div class="col-header col-perf @(SortColumn == "perf" ? "active" : "")" @onclick='() => SetSort("perf")'>
                        <span>Perf</span>
                        @if (SortColumn == "perf")
                        {
                            <span class="sort-icon fas @(SortAscending ? "fa-arrow-up" : "fa-arrow-down")"></span>
                        }
                    </div>
                    <div class="col-header col-name @(SortColumn == "name" ? "active" : "")" @onclick='() => SetSort("name")'>
                        <span>Model</span>
                        @if (SortColumn == "name")
                        {
                            <span class="sort-icon fas @(SortAscending ? "fa-arrow-up" : "fa-arrow-down")"></span>
                        }
                    </div>
                    <div class="col-header col-caps">
                        <span>Capabilities</span>
                    </div>
                    <div class="col-header col-params @(SortColumn == "params" ? "active" : "")" @onclick='() => SetSort("params")'>
                        <span>Params</span>
                        @if (SortColumn == "params")
                        {
                            <span class="sort-icon fas @(SortAscending ? "fa-arrow-up" : "fa-arrow-down")"></span>
                        }
                    </div>
                    <div class="col-header col-context @(SortColumn == "context" ? "active" : "")" @onclick='() => SetSort("context")'>
                        <span>Context</span>
                        @if (SortColumn == "context")
                        {
                            <span class="sort-icon fas @(SortAscending ? "fa-arrow-up" : "fa-arrow-down")"></span>
                        }
                    </div>
                    <div class="col-header col-quant">
                        <span>Quant</span>
                    </div>
                    <div class="col-header col-size @(SortColumn == "size" ? "active" : "")" @onclick='() => SetSort("size")'>
                        <span>Size</span>
                        @if (SortColumn == "size")
                        {
                            <span class="sort-icon fas @(SortAscending ? "fa-arrow-up" : "fa-arrow-down")"></span>
                        }
                    </div>
                    <div class="col-header col-status @(SortColumn == "status" ? "active" : "")" @onclick='() => SetSort("status")'>
                        <span>Status</span>
                        @if (SortColumn == "status")
                        {
                            <span class="sort-icon fas @(SortAscending ? "fa-arrow-up" : "fa-arrow-down")"></span>
                        }
                    </div>
                </div>

                <div class="model-selection-dialog-body">
                    @if (SortedFilteredModels.Any())
                    {
                        @foreach (var model in SortedFilteredModels)
                        {
                            <div class="model-item" @onclick="() => SelectModel(model)">
                                
                                <!-- Performance Gauge -->
                                <div class="model-perf-gauge">
                                    <MudTooltip Placement="Placement.Right" Arrow="true" Class="perf-tooltip">
                                        <ChildContent>
                                            <div class="gauge-container">
                                                <svg viewBox="0 0 36 36" class="gauge-svg">
                                                    <path class="gauge-bg"
                                                        d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                                                        fill="none" stroke-width="3" />
                                                    <path class="gauge-fill @GetPerformanceClass(model.CompatibilityLevel)"
                                                        d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                                                        fill="none" stroke-width="3"
                                                        stroke-dasharray="@((model.CompatibilityLevel * 100).ToString("F0")), 100" />
                                                </svg>
                                                <span class="gauge-value">@((model.CompatibilityLevel * 100).ToString("F0"))</span>
                                            </div>
                                        </ChildContent>
                                        <TooltipContent>
                                            <div class="perf-card">
                                                <div class="perf-card-header">Performance Score</div>
                                                <div class="perf-card-score @GetPerformanceClass(model.CompatibilityLevel)">
                                                    @((model.CompatibilityLevel * 100).ToString("F0"))%
                                                </div>
                                                <div class="perf-card-meters">
                                                    <div class="perf-meter">
                                                        <span class="meter-label">Speed</span>
                                                        <div class="meter-bar">
                                                            <div class="meter-fill @GetPerformanceClass(model.CompatibilityLevel)" style="width: @((model.CompatibilityLevel * 100).ToString("F0"))%"></div>
                                                        </div>
                                                    </div>
                                                    <div class="perf-meter">
                                                        <span class="meter-label">Memory</span>
                                                        <div class="meter-bar">
                                                            <div class="meter-fill @GetMemoryClass(model.ModelInfo.FileSize)" style="width: @GetMemoryScore(model.ModelInfo.FileSize)%"></div>
                                                        </div>
                                                    </div>
                                                    <div class="perf-meter">
                                                        <span class="meter-label">Efficiency</span>
                                                        <div class="meter-bar">
                                                            <div class="meter-fill @GetPerformanceClass(model.CompatibilityLevel)" style="width: @((model.CompatibilityLevel * 90 + 10).ToString("F0"))%"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="perf-card-hint">Based on your hardware</div>
                                            </div>
                                        </TooltipContent>
                                    </MudTooltip>
                                </div>

                                <!-- Model Name & Publisher with Info Icon -->
                                <div class="model-info">
                                    <div class="model-name-container">
                                        <div class="model-name-row">
                                            <span class="model-name">@model.ModelInfo.ModelName</span>
                                            <MudTooltip Placement="Placement.Right" Arrow="false" Class="model-card-tooltip" Delay="200" Duration="0">
                                                <ChildContent>
                                                    <span class="info-icon" @onclick:stopPropagation="true">
                                                        <MudIcon Icon="@Icons.Material.Outlined.Info" Size="Size.Small" />
                                                    </span>
                                                </ChildContent>
                                                <TooltipContent>
                                                    <div class="model-card-popup">
                                                        <!-- Header Row -->
                                                        <div class="mcp-header">
                                                            <div class="mcp-header-left">
                                                                <div class="mcp-title">@model.ModelInfo.ModelName</div>
                                                                <div class="mcp-subtitle">@model.ModelInfo.Publisher â€¢ @model.ModelInfo.Architecture</div>
                                                            </div>
                                                            <div class="mcp-perf @GetPerformanceClass(model.CompatibilityLevel)">
                                                                <MudIcon Icon="@Icons.Material.Outlined.Speed" Size="Size.Small" />
                                                                <span>@((model.CompatibilityLevel * 100).ToString("F0"))%</span>
                                                            </div>
                                                        </div>
                                                        
                                                        <!-- Description -->
                                                        @if (!string.IsNullOrEmpty(model.ModelInfo.Description))
                                                        {
                                                            <div class="mcp-description">@model.ModelInfo.Description</div>
                                                        }

                                                        <!-- Specs Row - All in one line -->
                                                        <div class="mcp-specs-row">
                                                            <div class="mcp-spec">
                                                                <span class="mcp-spec-value">@model.ModelSize</span>
                                                                <span class="mcp-spec-label">Params</span>
                                                            </div>
                                                            <div class="mcp-spec-divider"></div>
                                                            <div class="mcp-spec">
                                                                <span class="mcp-spec-value">@($"{model.MaxContextLengthKB}K")</span>
                                                                <span class="mcp-spec-label">Context</span>
                                                            </div>
                                                            <div class="mcp-spec-divider"></div>
                                                            <div class="mcp-spec">
                                                                <span class="mcp-spec-value">@model.Precision</span>
                                                                <span class="mcp-spec-label">Quant</span>
                                                            </div>
                                                            <div class="mcp-spec-divider"></div>
                                                            <div class="mcp-spec">
                                                                <span class="mcp-spec-value">@FormatSize(model.ModelInfo.FileSize)</span>
                                                                <span class="mcp-spec-label">Size</span>
                                                            </div>
                                                        </div>

                                                        <!-- Capabilities Row -->
                                                        @if (model.HasReasoningCapability || model.HasVisionCapability || model.IsCodeModel || model.IsMathModel || model.HasToolsCallCapability)
                                                        {
                                                            <div class="mcp-caps-row">
                                                                @if (model.HasReasoningCapability)
                                                                {
                                                                    <span class="mcp-cap-pill mcp-cap-reasoning">
                                                                        <MudIcon Icon="@Icons.Material.Outlined.Psychology" Size="Size.Small" />
                                                                        <span>Reasoning</span>
                                                                    </span>
                                                                }
                                                                @if (model.HasVisionCapability)
                                                                {
                                                                    <span class="mcp-cap-pill mcp-cap-vision">
                                                                        <MudIcon Icon="@Icons.Material.Outlined.Visibility" Size="Size.Small" />
                                                                        <span>Vision</span>
                                                                    </span>
                                                                }
                                                                @if (model.IsCodeModel)
                                                                {
                                                                    <span class="mcp-cap-pill mcp-cap-code">
                                                                        <MudIcon Icon="@Icons.Material.Outlined.Code" Size="Size.Small" />
                                                                        <span>Code</span>
                                                                    </span>
                                                                }
                                                                @if (model.IsMathModel)
                                                                {
                                                                    <span class="mcp-cap-pill mcp-cap-math">
                                                                        <MudIcon Icon="@Icons.Material.Outlined.Calculate" Size="Size.Small" />
                                                                        <span>Math</span>
                                                                    </span>
                                                                }
                                                                @if (model.HasToolsCallCapability)
                                                                {
                                                                    <span class="mcp-cap-pill mcp-cap-tools">
                                                                        <MudIcon Icon="@Icons.Material.Outlined.Build" Size="Size.Small" />
                                                                        <span>Tools</span>
                                                                    </span>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                </TooltipContent>
                                            </MudTooltip>
                                        </div>
                                        <span class="model-publisher">@model.ModelInfo.Publisher</span>
                                    </div>
                                </div>

                                <!-- Capabilities Pills -->
                                <div class="model-caps">
                                    <div class="caps-container">
                                        @if (model.HasReasoningCapability)
                                        {
                                            <div class="cap-pill cap-reasoning" title="Advanced Reasoning">
                                                <MudIcon Icon="@Icons.Material.Outlined.Psychology" Size="Size.Small" />
                                                <span>Reasoning</span>
                                            </div>
                                        }
                                        @if (model.HasVisionCapability)
                                        {
                                            <div class="cap-pill cap-vision" title="Vision / Image Understanding">
                                                <MudIcon Icon="@Icons.Material.Outlined.Visibility" Size="Size.Small" />
                                                <span>Vision</span>
                                            </div>
                                        }
                                        @if (model.IsCodeModel)
                                        {
                                            <div class="cap-pill cap-code" title="Code Generation">
                                                <MudIcon Icon="@Icons.Material.Outlined.Code" Size="Size.Small" />
                                                <span>Code</span>
                                            </div>
                                        }
                                        @if (model.IsMathModel)
                                        {
                                            <div class="cap-pill cap-math" title="Math & Calculations">
                                                <MudIcon Icon="@Icons.Material.Outlined.Calculate" Size="Size.Small" />
                                                <span>Math</span>
                                            </div>
                                        }
                                        @if (model.HasToolsCallCapability)
                                        {
                                            <div class="cap-pill cap-tools" title="Function / Tool Calling">
                                                <MudIcon Icon="@Icons.Material.Outlined.Build" Size="Size.Small" />
                                                <span>Tools</span>
                                            </div>
                                        }
                                        @if (model.IsChatModel && !model.HasReasoningCapability && !model.HasVisionCapability && !model.IsCodeModel && !model.IsMathModel && !model.HasToolsCallCapability)
                                        {
                                            <div class="cap-pill cap-chat" title="Chat Optimized">
                                                <MudIcon Icon="@Icons.Material.Outlined.Chat" Size="Size.Small" />
                                                <span>Chat</span>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Specs -->
                                <div class="model-param" title="@($"{model.ModelInfo.ParameterCount:N0} parameters")">
                                    @model.ModelSize
                                </div>
                                <div class="model-context" title="@($"{model.ModelInfo.ContextLength:N0} tokens")">
                                    @($"{model.MaxContextLengthKB}k")
                                </div>
                                <div class="model-quant" title="@($"{model.Precision} quantization")">
                                    @model.Precision
                                </div>
                                <div class="model-size" title="@($"{model.ModelInfo.FileSize:N0} bytes")">
                                    @FormatSize(model.ModelInfo.FileSize)
                                </div>

                                <!-- Availability Status -->
                                <div class="model-status">
                                    @if (model.IsLocallyAvailable)
                                    {
                                        <div class="status-badge status-local" title="Ready to use - Model is downloaded and available locally">
                                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" />
                                            <span>Ready</span>
                                        </div>
                                        <button class="model-folder-btn" @onclick="() => OpenModelFolder(model)" @onclick:stopPropagation="true" title="Open file location">
                                            <i class="fas fa-folder-open"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <div class="status-badge status-cloud" title="Requires download - Click to download from Hugging Face">
                                            <MudIcon Icon="@Icons.Material.Outlined.CloudDownload" Size="Size.Small" />
                                            <span>Download</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-results">
                            <MudIcon Icon="@Icons.Material.Outlined.SearchOff" Size="Size.Large" Class="no-results-icon" />
                            <MudText Typo="Typo.body1" Class="no-results-text">No models found</MudText>
                            <MudText Typo="Typo.body2" Class="no-results-hint">Try adjusting your search or filters</MudText>
                        </div>
                    }
                </div>
            </div>
        </div>
    </DialogContent>
</MudDialog>

