        background-color: #F59E0B;
        box-shadow: 0 0 12px rgba(245, 158, 11, 0.5);
    }

    .indicator-dot.perf-low {
        background-color: #EF4444;
        box-shadow: 0 0 12px rgba(239, 68, 68, 0.5);
    }

    .model-info {
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
        min-width: 0;
        flex: 1;
    }

    .model-name-row {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .model-name {
        color: #FFFFFF;
        font-size: 0.9375rem;
        font-weight: 500;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .cloud-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6B6B6B;
        font-size: 0.75rem;
    }

    .model-publisher {
        color: #5A5A5A;
        font-size: 0.8125rem;
    }

    .model-specs {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .spec-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.375rem 0.625rem;
        background-color: rgba(255, 255, 255, 0.03);
        border-radius: 0.5rem;
        min-width: 3.5rem;
    }

    .spec-value {
        color: #CDCDCD;
        font-size: 0.8125rem;
        font-weight: 500;
        font-family: 'SF Mono', 'Consolas', monospace;
    }

    .spec-label {
        color: #4A4A4A;
        font-size: 0.625rem;
        text-transform: uppercase;
        letter-spacing: 0.03em;
    }

    .spec-size .spec-value {
        color: #6B6B6B;
        font-size: 0.75rem;
    }

    .model-arrow {
        color: #3A3A3A;
        font-size: 0.75rem;
        transition: all 0.15s ease;
    }

    .model-item:hover .model-arrow {
        color: #6B6B6B;
        transform: translateX(2px);
    }

    .no-results {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 3rem 1rem;
        gap: 0.5rem;
    }

    .no-results-icon {
        font-size: 2rem;
        color: #3A3A3A;
        margin-bottom: 0.5rem;
    }

    .no-results-text {
        color: #8E8E8E !important;
    }

    .no-results-hint {
        color: #5A5A5A !important;
    }
</style>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Inject] private ModelListViewModel ModelListViewModel { get; set; }

    private string _searchQuery = string.Empty;
    private string SearchQuery
    {
        get => _searchQuery;
        set
        {
            _searchQuery = value;
            InvokeAsync(StateHasChanged);
        }
    }

    private IEnumerable<ModelCardViewModel> FilteredModels =>
        string.IsNullOrWhiteSpace(SearchQuery)
            ? ModelListViewModel.Models
            : ModelListViewModel.Models.Where(m =>
                m.ModelInfo.ShortModelName.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase) ||
                m.ModelInfo.Publisher.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase));

    private void SelectModel(ModelCardViewModel model)
    {
        MudDialog.Close(model);
    }

    private string GetPerformanceClass(float level)
    {
        return level >= 0.7f ? "perf-high" : level >= 0.4f ? "perf-medium" : "perf-low";
    }

    private string FormatSize(long bytes)
    {
        if (bytes >= 1_000_000_000)
            return $"{bytes / 1_000_000_000.0:F1} GB";
        if (bytes >= 1_000_000)
            return $"{bytes / 1_000_000.0:F0} MB";
        return $"{bytes / 1_000.0:F0} KB";
    }

    [Parameter] public string Message { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string ActionText { get; set; }
    [Parameter] public Color ActionColor { get; set; }
    [Parameter] public bool IsImportant { get; set; }
}
