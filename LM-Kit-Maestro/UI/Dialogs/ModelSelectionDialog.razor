@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Inject] private ModelListViewModel ModelListViewModel { get; set; }

    private string _searchQuery = string.Empty;
    private string SearchQuery
    {
        get => _searchQuery;
        set
        {
            _searchQuery = value;
            InvokeAsync(StateHasChanged);
        }
    }

    private string SortColumn { get; set; } = "name";
    private bool SortAscending { get; set; } = true;

    private void SetSort(string column)
    {
        if (SortColumn == column)
        {
            SortAscending = !SortAscending;
        }
        else
        {
            SortColumn = column;
            SortAscending = column == "name"; // Default ascending for name, descending for numbers
        }
        InvokeAsync(StateHasChanged);
    }

    private IEnumerable<ModelCardViewModel> FilteredModels =>
        string.IsNullOrWhiteSpace(SearchQuery)
            ? ModelListViewModel.Models
            : ModelListViewModel.Models.Where(m =>
                m.ModelInfo.ShortModelName.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase) ||
                m.ModelInfo.Publisher.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<ModelCardViewModel> SortedFilteredModels
    {
        get
        {
            var models = FilteredModels;
            return SortColumn switch
            {
                "name" => SortAscending 
                    ? models.OrderBy(m => m.ModelInfo.ShortModelName)
                    : models.OrderByDescending(m => m.ModelInfo.ShortModelName),
                "params" => SortAscending 
                    ? models.OrderBy(m => m.ModelInfo.ParameterCount)
                    : models.OrderByDescending(m => m.ModelInfo.ParameterCount),
                "context" => SortAscending 
                    ? models.OrderBy(m => m.ModelInfo.ContextLength)
                    : models.OrderByDescending(m => m.ModelInfo.ContextLength),
                "size" => SortAscending 
                    ? models.OrderBy(m => m.ModelInfo.FileSize)
                    : models.OrderByDescending(m => m.ModelInfo.FileSize),
                _ => models
            };
        }
    }

    private void SelectModel(ModelCardViewModel model)
    {
        MudDialog.Close(model);
    }

    private string GetPerformanceClass(float level)
    {
        return level >= 0.7f ? "perf-high" : level >= 0.4f ? "perf-medium" : "perf-low";
    }

    private string FormatSize(long bytes)
    {
        if (bytes >= 1_000_000_000)
            return $"{bytes / 1_000_000_000.0:F2} GB";
        if (bytes >= 1_000_000)
            return $"{bytes / 1_000_000.0:F0} MB";
        return $"{bytes / 1_000.0:F0} KB";
    }

    [Parameter] public string Message { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string ActionText { get; set; }
    [Parameter] public Color ActionColor { get; set; }
    [Parameter] public bool IsImportant { get; set; }
}
