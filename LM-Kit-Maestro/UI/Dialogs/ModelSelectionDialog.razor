<MudDialog Class="model-selection-dialog-root">
    <DialogContent>
        <div class="model-selection-dialog-content-wrapper">
            <div @onclick="() => MudDialog.Cancel()" class="dialog-backdrop"></div>
            <div class="model-selection-dialog-content-root">
                <div class="dialog-header">
                    <div class="header-content">
                        <MudText Typo="Typo.h5" Class="header-text">
                            Models
                        </MudText>
                        <MudText Typo="Typo.body2" Class="header-subtitle">
                            Select a model to power your conversation
                        </MudText>
                    </div>

                    <MudTooltip Text="Close" Placement="Placement.Bottom" Class="custom-tooltip">
                        <button class="close-button" @onclick="() => MudDialog.Cancel()">
                            <span class="fas fa-xmark"></span>
                        </button>
                    </MudTooltip>
                </div>

                <div class="search-container">
                    <span class="fas fa-search search-icon"></span>
                    <input type="text" 
                           class="search-input" 
                           placeholder="Search models..." 
                           @bind="SearchQuery" 
                           @bind:event="oninput" />
                    @if (!string.IsNullOrEmpty(SearchQuery))
                    {
                        <button class="search-clear" @onclick="() => SearchQuery = string.Empty">
                            <span class="fas fa-xmark"></span>
                        </button>
                    }
                </div>

                <div class="model-selection-dialog-body">
                    @if (FilteredModels.Any())
                    {
                        @foreach (var model in FilteredModels)
                        {
                            <div class="model-item @(model.IsLocallyAvailable ? "" : "model-cloud")" 
                                 @onclick="() => SelectModel(model)">
                                <div class="model-main">
                                    <MudTooltip Placement="Placement.Right" Class="custom-tooltip">
                                        <ChildContent>
                                            <div class="model-indicator">
                                                <div class="indicator-dot @GetPerformanceClass(model.CompatibilityLevel)"></div>
                                            </div>
                                        </ChildContent>
                                        <TooltipContent>
                                            <div class="tooltip-content">
                                                <div class="tooltip-header">
                                                    <span class="tooltip-icon @GetPerformanceClass(model.CompatibilityLevel)"></span>
                                                    <span class="tooltip-title">@GetPerformanceLabel(model.CompatibilityLevel)</span>
                                                </div>
                                                <div class="tooltip-score">Score: @((model.CompatibilityLevel * 100).ToString("0"))%</div>
                                                <div class="tooltip-desc">Estimated performance based on your hardware capabilities and model requirements.</div>
                                            </div>
                                        </TooltipContent>
                                    </MudTooltip>
                                    
                                    <div class="model-info">
                                        <div class="model-name-row">
                                            <MudTooltip Placement="Placement.Top" Class="custom-tooltip">
                                                <ChildContent>
                                                    <span class="model-name">@model.ModelInfo.ShortModelName</span>
                                                </ChildContent>
                                                <TooltipContent>
                                                    <div class="tooltip-content tooltip-wide">
                                                        <div class="tooltip-model-name">@model.ModelInfo.ShortModelName</div>
                                                        <div class="tooltip-model-desc">@(string.IsNullOrEmpty(model.ModelInfo.Description) ? "A large language model optimized for chat and instruction following." : model.ModelInfo.Description)</div>
                                                        @if (model.IsChatModel || model.HasVisionCapability || model.IsCodeModel || model.IsMathModel)
                                                        {
                                                            <div class="tooltip-capabilities">
                                                                @if (model.IsChatModel)
                                                                {
                                                                    <span class="capability-tag"><span class="fas fa-message"></span> Chat</span>
                                                                }
                                                                @if (model.HasVisionCapability)
                                                                {
                                                                    <span class="capability-tag"><span class="fas fa-eye"></span> Vision</span>
                                                                }
                                                                @if (model.IsCodeModel)
                                                                {
                                                                    <span class="capability-tag"><span class="fas fa-code"></span> Code</span>
                                                                }
                                                                @if (model.IsMathModel)
                                                                {
                                                                    <span class="capability-tag"><span class="fas fa-calculator"></span> Math</span>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                </TooltipContent>
                                            </MudTooltip>
                                            @if (!model.IsLocallyAvailable)
                                            {
                                                <MudTooltip Text="Download required - this model will be downloaded when selected" Placement="Placement.Top" Class="custom-tooltip">
                                                    <span class="cloud-badge">
                                                        <span class="fas fa-cloud-arrow-down"></span>
                                                    </span>
                                                </MudTooltip>
                                            }
                                        </div>
                                        <div class="model-publisher">@model.ModelInfo.Publisher</div>
                                    </div>
                                </div>
                                <div class="model-specs">
                                    <MudTooltip Placement="Placement.Top" Class="custom-tooltip">
                                        <ChildContent>
                                            <div class="spec-item spec-params">
                                                <span class="spec-value">@model.ModelSize</span>
                                                <span class="spec-label">params</span>
                                            </div>
                                        </ChildContent>
                                        <TooltipContent>
                                            <div class="tooltip-content">
                                                <div class="tooltip-title">Parameters: @model.ModelInfo.ParameterCount.ToString("N0")</div>
                                                <div class="tooltip-desc">The number of trainable parameters. Larger models are generally more capable but require more resources.</div>
                                            </div>
                                        </TooltipContent>
                                    </MudTooltip>
                                    
                                    <MudTooltip Placement="Placement.Top" Class="custom-tooltip">
                                        <ChildContent>
                                            <div class="spec-item spec-context">
                                                <span class="spec-value">@($"{model.MaxContextLengthKB}k")</span>
                                                <span class="spec-label">context</span>
                                            </div>
                                        </ChildContent>
                                        <TooltipContent>
                                            <div class="tooltip-content">
                                                <div class="tooltip-title">Context: @model.ModelInfo.ContextLength.ToString("N0") tokens</div>
                                                <div class="tooltip-desc">Maximum conversation length the model can process. Longer context allows for more extended conversations and documents.</div>
                                            </div>
                                        </TooltipContent>
                                    </MudTooltip>
                                    
                                    <MudTooltip Placement="Placement.Top" Class="custom-tooltip">
                                        <ChildContent>
                                            <div class="spec-item spec-quant">
                                                <span class="spec-value">@model.Precision</span>
                                            </div>
                                        </ChildContent>
                                        <TooltipContent>
                                            <div class="tooltip-content">
                                                <div class="tooltip-title">Quantization: @model.Precision</div>
                                                <div class="tooltip-desc">Bit precision for model weights. Lower values reduce memory usage and increase speed with minimal quality loss.</div>
                                            </div>
                                        </TooltipContent>
                                    </MudTooltip>
                                    
                                    <MudTooltip Placement="Placement.Top" Class="custom-tooltip">
                                        <ChildContent>
                                            <div class="spec-item spec-size">
                                                <span class="spec-value">@FormatSize(model.ModelInfo.FileSize)</span>
                                            </div>
                                        </ChildContent>
                                        <TooltipContent>
                                            <div class="tooltip-content">
                                                <div class="tooltip-title">Size: @FormatSizeExact(model.ModelInfo.FileSize)</div>
                                                <div class="tooltip-desc">Disk space required. The model must fit in your available RAM/VRAM for optimal performance.</div>
                                            </div>
                                        </TooltipContent>
                                    </MudTooltip>
                                </div>
                                <div class="model-arrow">
                                    <span class="fas fa-chevron-right"></span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-results">
                            <span class="fas fa-search no-results-icon"></span>
                            <MudText Typo="Typo.body1" Class="no-results-text">No models found</MudText>
                            <MudText Typo="Typo.body2" Class="no-results-hint">Try a different search term</MudText>
                        </div>
                    }
                </div>
            </div>
        </div>
    </DialogContent>
</MudDialog>

