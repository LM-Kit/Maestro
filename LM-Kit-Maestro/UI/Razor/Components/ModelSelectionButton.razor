@inject LMKitService LMKitService

<div class="root-container" @onclick="() => OnButtonClicked()">
    <div id="button-body">
        <div class="icon-size-xs">
            <IconButton OnClick="OnEjectButtonClicked"
                        Icon="fas fa-eject"
                        Style="IconButton.ButtonStyle.SecondaryAction" />
        </div>

        <MudText Align="Align.Center" Typo="Typo.caption">@Text</MudText>

        <MudIcon Icon="fas fa-chevron-down" Class="icon-size-xs" Color="Color.Dark" />

    </div>

    @if (ModelListViewModel.LoadingState == ModelListViewModel.ModelLoadingState.Loading && ModelListViewModel.LoadingProgress != null)
    {
        <div id="progress-bar">
            <MudProgressLinear Value="ModelListViewModel.LoadingProgress.Value" />
        </div>
    }
</div>