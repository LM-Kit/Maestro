@inherits LayoutComponentBase
@implements IDisposable

@inject ModelListViewModel ModelListViewModel
@inject ILLMFileManager FileManager
@inject LMKitService LmKitService
@inject ISnackbar Snackbar
@inject Maestro.Services.ISnackbarService SnackbarService
@inject IDialogService DialogService
@inject ThemeService ThemeService
@inject IJSRuntime JS

<div id="app-root">
    <div id="app-bar">
        <nav id="nav-bar">
            <div class="nav-section-top">
                <SectionOutlet SectionName="nav-bar-top" />
            </div>
            
            <div class="nav-section-main">
            </div>

            <div class="nav-section-bottom">
                <SectionOutlet SectionName="nav-bar-bottom" />
            </div>
        </nav>
    </div>

    <div id="body-container">
        @Body
    </div>
</div>

<SnackbarComponent />
<MudThemeProvider IsDarkMode="true" DefaultScrollbar="true" Theme="@_currentMudTheme" />
<MudPopoverProvider />
<MudSnackbarProvider />

<MudDialogProvider FullWidth="true"
                   CloseButton="false"
                   BackdropClick="true"
                   NoHeader="true"
                   Position="DialogPosition.TopLeft"
                   CloseOnEscapeKey="true" />

@code {
    private MudTheme _currentMudTheme = null!;
    
    protected override void OnInitialized()
    {
        _currentMudTheme = ThemeService.MudTheme;
        ThemeService.OnThemeChanged += OnThemeChanged;
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Load saved theme from localStorage
            var savedTheme = await JS.InvokeAsync<string>("localStorage.getItem", "maestro-theme");
            if (!string.IsNullOrEmpty(savedTheme))
            {
                ThemeService.SetTheme(savedTheme);
            }
            else
            {
                // Apply default theme CSS
                await ApplyCssTheme(ThemeService.CurrentTheme);
            }
        }
    }
    
    private async void OnThemeChanged()
    {
        try
        {
            _currentMudTheme = ThemeService.MudTheme;
            await ApplyCssTheme(ThemeService.CurrentTheme);
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Theme change error: {ex.Message}");
        }
    }
    
    private async Task ApplyCssTheme(ThemePreset theme)
    {
        try
        {
            await JS.InvokeVoidAsync("applyTheme", theme.Primary, theme.Accent);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Apply CSS theme error: {ex.Message}");
        }
    }
    
    public void Dispose()
    {
        ThemeService.OnThemeChanged -= OnThemeChanged;
    }
}
